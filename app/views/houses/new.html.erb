<h1>物件登録</h1>

<%= form_with model: @house do |f| %>
  <div class="house-group">
    <%= f.label :property_name, "物件名" %>
    <br><%= f.text_field :property_name %>
    <br><%= f.label :rent, "賃料" %>
    <br><%= f.number_field :rent, step: "0.1" , min: 0.1 %>円
    <br><%= f.label :address, "住所" %>
    <br><%= f.text_field :address %>
    <br><%= f.label :age, "築年数" %>
    <br><%= f.number_field :age, min: 0 %>年
    <br><%= f.label :remarks, "備考" %>
    <br><%= f.text_area :remarks %>
  </div>
  <div class="information-group">
    <%= f.fields_for :supplementary_informations do |s| %>
      <h3>最寄り駅</h3>
      <br><%= s.label :line, "路線名" %>
      <br><%= s.text_field :line %>
      <br><%= s.label :station, "駅名" %>
      <br><%= s.text_field :station %>
      <br><%= s.label :minutes_on_foot, "徒歩分数" %>
      <br><%= s.number_field :minutes_on_foot, min: 0  %>分
    <% end %>
  </div>
  <%= f.submit "登録する" %>
<% end %>
<%= link_to "戻る" , houses_path %>